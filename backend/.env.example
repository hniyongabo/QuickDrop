# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security Keys
# IMPORTANT: Generate strong secret keys for production
# You can generate a secret key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production-use-secrets-token-hex
JWT_SECRET_KEY=jwt-secret-key-change-in-production-use-secrets-token-hex

# Database Configuration
# PostgreSQL Connection String
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://quickdrop_user:password@localhost:5432/quickdrop_db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# JWT Configuration (optional - defaults are set in config.py)
# JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
# JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# API Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
