# .env.sample - copy to .env and fill values
PORT=3000

# A secure, long random string (store safely)
JWT_SECRET=replace_with_a_random_secret_at_least_32_chars

# JWT token TTL (e.g., 15m, 1h, 7d)
JWT_EXPIRES_IN=1h

# bcrypt cost factor
BCRYPT_SALT_ROUNDS=12

# Rate limit (requests per window)
RATE_LIMIT_WINDOW_MS=900000   # 15 minutes
RATE_LIMIT_MAX=100            # max requests per window per IP

# CORS allowed origin(s) - comma separated or "*" to allow all
CORS_ORIGINS=http://localhost:5173

